<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment android:id="@+id/navigation_home"
        android:name="com.example.bmsitapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"
        app:startDestination="@id/navigation_home"/>

    <fragment android:id="@+id/navigation_notice"
        android:name="com.example.bmsitapp.ui.notice.NoticeFragment"
        android:label="Notice"
        tools:layout="@layout/fragment_notice"
        app:startDestination="@id/navigation_notice"/>

    <fragment android:id="@+id/navigation_faculty"
        android:name="com.example.bmsitapp.ui.faculty.FacultyFragment"
        android:label="Faculty"
        tools:layout="@layout/fragment_faculty"
        app:startDestination="@id/navigation_faculty"/>

    <fragment android:id="@+id/navigation_gallery"
        android:name="com.example.bmsitapp.ui.gallery.GalleryFragment"
        android:label="Gallery"
        tools:layout="@layout/fragment_gallery"
        app:startDestination="@id/navigation_gallery"/>

    <fragment android:id="@+id/navigation_about"
        android:name="com.example.bmsitapp.ui.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about"
        app:startDestination="@id/navigation_about"/>

</navigation>